<% if (typeof username != 'undefined') { %>
  <script defer>
  (() => {
    const pfp = document.getElementById("profileImage")
    pfp.addEventListener("click", ()=>{
      window.location.replace("<%= home%><%=phpPort%>/dashboard")
    })
  })()
  </script>
<% } %>
  <script>
  (() => {
    fetch("configs/particles.json")
      .then(res => res.json())
      .then(json => {
        const disableBackground = document.getElementById("disableBackground")
        disableBackground.addEventListener("change", ()=>{
          if(disableBackground.checked){
            json.particles.number.value = 0
            particlesJS.load("particles-js", json)            
          }else{
            json.particles.number.value = 10
            particlesJS.load("particles-js", json)     
          }
        })
      })
  })()
  </script>